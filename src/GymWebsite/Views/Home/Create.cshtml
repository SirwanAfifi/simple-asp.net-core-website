@model GymWebsite.ViewModels.Gym
@{ 
    ViewBag.Title = "Creating a gym";
}

<div class="row">
    <div class="col-md-8">
        <div class="well bs-component">
            <form class="form-horizontal" asp-controller="Home" asp-action="Create" method="post">
                <fieldset>
                    <legend>Create a Gym</legend>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" asp-for="Title"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Title" placeholder="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" asp-for="Address"></label>
                        <div class="col-sm-10">
                            <textarea class="form-control" asp-for="Address" placeholder="Address"></textarea>
                        </div>
                    </div>
                    <div class="form-group" id="imageHolder">
                        <label class="col-sm-2 control-label" asp-for="Images"></label>
                        <span class="glyphicon glyphicon-new-window" id="btnAddImage"></span>
                        <div class="col-sm-4">
                            <fieldset class="myFieldSet">
                                <input type="file" asp-for="Images[0].FileName" /><br />
                                <input class="form-control" asp-for="Images[0].Order" placeholder="Order" /><br />
                                <input type="checkbox" asp-for="Images[0].IsEnabled" /> Is Enabled?
                                <input type="checkbox" asp-for="Images[0].IsCoverPhoto" /> Cover Photo?
                            </fieldset>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>