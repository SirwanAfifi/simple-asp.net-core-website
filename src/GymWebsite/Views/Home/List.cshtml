@model List<GymWebsite.ViewModels.Gym>
@{
    ViewBag.Title = "Home Page";
}

<a asp-action="create" class="btn btn-info">Create a new gym</a>
<hr />

<div class="row">
    <div class="col-md-4">
        <select class="form-control" ng-model="sortBy">
            <option value="None">-- Select --</option>
            <option value="title">Title</option>
            <option value="adress">Address</option>
        </select>
    </div>
</div>
<hr />

<div class="row" ng-controller="gymController as vm">
    
    <div class="col-md-4 col-sm-4 col-xs-12" ng-repeat="gym in vm.gymList | orderBy:sortBy ">
        <div class="gym-container">
            <div class="gym-image">
                <img ng-src="{{gym.image}}" alt="">
            </div>
            <div class="gym-content">
                <h3><a href="#">{{gym.title}}</a></h3>
                <p>
                    {{gym.address}}
                </p>
            </div>
            <div class="gym-features">
                <a href="/home/details/{{gym.id}}">Details</a> | 
                <a href="/home/edit/{{gym.id}}">Edit</a>
            </div>
        </div>
    </div>
</div>


